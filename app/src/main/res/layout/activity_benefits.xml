<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:id="@+id/benefitsContainer"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BenefitsActivity"
    android:paddingBottom="16dp"
    >

<android.support.v7.widget.RecyclerView
    android:id="@+id/benefitsRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/benefitsNextButton"
    android:nestedScrollingEnabled="false"
    >

</android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/benefitsNextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/benefitsRecyclerView"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/benefitsProgressbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="100pt"
        />

</android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>