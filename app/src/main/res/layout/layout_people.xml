<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:background="@color/colorGray"
        >
       <android.support.constraint.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:paddingStart ="8dp"
           android:paddingEnd="8dp"
           android:paddingTop="8dp"
           android:paddingBottom="16dp"
           android:background="@color/colorGray">
           <ImageView
               android:id="@+id/profilePic"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:src="@drawable/icon_boy"
               android:background="@drawable/coloraccent_layout"
               android:paddingTop="8dp"
               />
           <TextView
               android:id="@+id/nameText"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="Name"
               app:layout_constraintStart_toEndOf="@id/profilePic"
               android:layout_marginStart="8dp"
               android:textSize="20sp"
               android:textColor="@color/colorPrimaryDark"
               app:layout_constraintEnd_toStartOf="@id/moreButton"
               />
           <TextView
               android:id="@+id/detailsText"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="30, Male, Non-Smoker, Class 1"
               android:textColor="@color/colorPrimaryDark"
               app:layout_constraintStart_toEndOf="@id/profilePic"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@id/nameText"
               android:layout_marginStart="8dp"
               android:layout_marginTop="8dp"
               />
           <View
               android:layout_width="0dp"
               android:layout_height="1dp"
               app:layout_constraintStart_toEndOf="@id/profilePic"
               app:layout_constraintEnd_toEndOf="parent"
               android:background="#cccccc"
               app:layout_constraintTop_toBottomOf="@id/detailsText"
               android:layout_marginStart="8dp"
               android:layout_marginTop="8dp"
               />
           <TextView
               android:id="@+id/benefitsTitleText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Benefits :"
               android:textColor="@color/colorPrimaryDark"
               android:textStyle="bold"
               app:layout_constraintTop_toBottomOf="@id/profilePic"
               android:layout_marginTop="8dp"
               />
           <TextView
               android:id="@+id/benefitsValueText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Health Cover"
               android:textColor="@color/colorPrimaryDark"
               app:layout_constraintTop_toBottomOf="@id/profilePic"
               app:layout_constraintStart_toEndOf="@id/benefitsTitleText"
               android:layout_marginTop="8dp"
               android:layout_marginStart="8dp"
               />
           <ImageButton
               android:id="@+id/moreButton"
               android:layout_width="30dp"
               android:layout_height="30dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:src="@drawable/ic_more"
               android:background="#00000000"
               />
       </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>