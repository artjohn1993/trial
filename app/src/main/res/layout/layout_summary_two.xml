<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >


        <android.support.constraint.ConstraintLayout
            android:id="@+id/resultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e5e3eb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >
            <View
                android:id="@+id/colorProviderView"
                android:layout_width="15dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/resultContainer"
                app:layout_constraintBottom_toBottomOf="@id/resultContainer"
                android:background="@color/colorPrimaryDark"
                />
            <ImageView
                android:id="@+id/summaryLogo"
                android:layout_width="0dp"
                android:layout_height="70dp"
                app:layout_constraintStart_toEndOf="@id/colorProviderView"
                app:layout_constraintEnd_toStartOf="@id/summaryPrice"
                android:src="@drawable/ic_aia"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="16dp"
                />
            <TextView
                android:id="@+id/summaryPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/error"
                app:layout_constraintStart_toEndOf="@id/summaryLogo"
                android:text="Test"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:lines="1"
                android:layout_marginEnd="8dp"
                />

            <TextView
                android:id="@+id/summaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test"
                app:layout_constraintEnd_toEndOf="@id/summaryPrice"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/summaryPrice"
                app:layout_constraintTop_toBottomOf="@id/summaryPrice" />
            <ImageView
                android:id="@+id/error"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_error"
                />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>